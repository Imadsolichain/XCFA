generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  firstname     String
  lastname      String
  role          Role           @default(CFA_ADMIN)
  createdAt     DateTime       @default(now())
  cfaId         String?
  entrepriseId  String?
  apprenant     Apprenant?
  contrats      Contrat[]
  conventions   Convention[]
  evenements    Evenement[]
  notifications Notification[]
  cfa           CFA?           @relation(fields: [cfaId], references: [id])
  entreprise    Entreprise?    @relation(fields: [entrepriseId], references: [id])
}

model CFA {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  users     User[]
}

model Entreprise {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  users     User[]
}

model Apprenant {
  id            String    @id @default(cuid())
  userId        String    @unique
  dateNaissance DateTime?
  createdAt     DateTime  @default(now())
  user          User      @relation(fields: [userId], references: [id])
}

model Contrat {
  id        String   @id @default(cuid())
  userId    String
  type      String
  statut    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Convention {
  id        String   @id @default(cuid())
  userId    String
  sujet     String
  statut    String   @default("brouillon") // Ajout√© pour suivi signature/relances
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Evenement {
  id        String   @id @default(cuid())
  type      String
  message   String
  userId    String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  message   String
  lu        Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  CFA_ADMIN
  ENTREPRISE
  APPRENANT
  OPCO
  SUPERADMIN
}
